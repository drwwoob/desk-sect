{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DesktopPet",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/DesktopPet",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "miDebuggerPath": "/path/to/your/gdb"  // 替换为你的 gdb 路径
        }
    ]
}
